{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "indent": "off",
        "curly": "off",
        "space-before-function-paren": ["error", "never"],
        "comma-dangle": "off"
    },
    "overrides": [
        {
          "files": ["*.ts"]
        }
    ]
}
